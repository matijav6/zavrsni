{% extends 'base.html.twig' %}
{% block navigation %}
    {% include 'user/navigation.html.twig' %}
{% endblock %}
{% block title %}Županija{% endblock %}

{% block body %}
    <div class="container-fluid form-inline mb-3">
        <h1>Županije {{ county.name }}</h1>
    </div>

    <table class="table table-bordered table-condensed table-hover p-2">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ county.id }}</td>
            </tr>
            <tr>
                <th>Naziv</th>
                <td>{{ county.name }}</td>
            </tr>
            <tr>
                <th>Akcije</th>
                <td class="form-inline">
                    <a href="{{ path('county_edit', {'id': county.id}) }}" class="btn btn-outline-secondary"> <i class="far fa-edit"></i></a>
                    {{ include('county/_delete_form.html.twig') }}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('county_index') }}" class="btn btn-outline-secondary"><i class="fas fa-chevron-left"></i></a>

{% endblock %}

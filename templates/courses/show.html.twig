{% extends 'base.html.twig' %}
{% block navigation %}
    {% include 'user/navigation.html.twig' %}
{% endblock %}
{% block title %}Kolegiji{% endblock %}

{% block body %}
    <div class="container-fluid form-inline mb-3">
        <h1>Kolegij {{ course.name }}</h1>
    </div>

    <table class="table table-bordered table-condensed table-hover p-2">
        <tbody>
        <tr>
            <th>ID</th>
            <td>{{ course.id }}</td>
        </tr>
        <tr>
            <th>Sinonim</th>
            <td>{{ course.aka }}</td>
        </tr>
        <tr>
            <th>Naziv</th>
            <td>{{ course.name }}</td>
        </tr>
        <tr>
            <th>Fakultet</th>
            <td>{{ course.college.name }}</td>
        </tr>
        <tr>
            <th>Akcije</th>
            <td class="form-inline">
                <a href="{{ path('courses_edit', {'id': course.id}) }}" class="btn btn-outline-secondary"> <i class="far fa-edit"></i></a>
                {{ include('courses/_delete_form.html.twig') }}
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('courses_index') }}" class="btn btn-outline-secondary"><i class="fas fa-chevron-left"></i></a>

{% endblock %}

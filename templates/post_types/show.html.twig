{% extends 'base.html.twig' %}
{% block navigation %}
    {% include 'user/navigation.html.twig' %}
{% endblock %}
{% block title %}Tip objave{% endblock %}

{% block body %}
    <div class="container-fluid form-inline mb-3">
        <h1>Tip {{ post_type.name }}</h1>
    </div>

    <table class="table table-bordered table-condensed table-hover p-2">
        <tbody>
        <tr>
            <th>ID</th>
            <td>{{ post_type.id }}</td>
        </tr>
        <tr>
            <th>Naziv</th>
            <td>{{ post_type.name }}</td>
        </tr>
        <tr>
            <th>Akcije</th>
            <td class="form-inline">
                <a href="{{ path('post_types_edit', {'id': post_type.id}) }}" class="btn btn-outline-secondary"> <i class="far fa-edit"></i></a>
                {{ include('post_types/_delete_form.html.twig') }}
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('post_types_index') }}" class="btn btn-outline-secondary"><i class="fas fa-chevron-left"></i></a>

{% endblock %}
